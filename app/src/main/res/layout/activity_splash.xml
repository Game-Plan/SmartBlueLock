<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashActivity"
    >
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:id="@+id/logo"
        />

    <EditText
        android:id="@+id/pin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#90CAF9"
        android:hint="XXXX"
        android:textColorHint="#fff"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="20dp"
        android:textColor="#000000"
        android:layout_marginRight="8dp" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pin"
        android:layout_centerVertical="true"
        android:id="@+id/submit"
        android:layout_centerHorizontal="true"
        android:background="@drawable/seclogin"
        android:backgroundTint="@color/button"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="New User"
        android:backgroundTint="@color/button2"
        android:textColor="#fff"
        android:id="@+id/newUser"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        android:textColor="#fff"
        android:id="@+id/timer"
        android:visibility="invisible"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Existing User"
        android:textColor="#fff"
        android:backgroundTint="@color/button2"
        android:id="@+id/alreadyregis"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Send Authority"
        android:visibility="invisible"
        android:backgroundTint="@color/button2"
        android:textColor="#fff"
        android:id="@+id/sendAuth"
        />


    <com.felipecsl.gifimageview.library.GifImageView
        android:id="@+id/splashGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitEnd" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pin"
        android:layout_alignEnd="@+id/newUser"

        app:backgroundTint="@color/button2"
        android:elevation="6dp"
        android:src="@drawable/ic_menu"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/menuitem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/menu"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@color/button2"
        android:elevation="6dp"
        android:src="@drawable/ic_code"
        android:visibility="invisible"
        app:pressedTranslationZ="12dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset"
    android:textColor="#fff"
    android:textStyle="bold"
    android:layout_toLeftOf="@+id/menuitem1"
   android:layout_marginBottom="15dp"
    android:layout_marginRight="8dp"
    android:layout_above="@+id/pin"
    android:visibility="invisible"
    android:id="@+id/textReset"
    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/menuitem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menu"
        app:backgroundTint="@color/button2"
        android:elevation="6dp"
        android:src="@drawable/ic_code"
        android:visibility="invisible"
        app:pressedTranslationZ="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Pin"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/menuitem2"
        android:layout_marginTop="280dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        android:id="@+id/textPin"
        />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/progBar"
        android:visibility="gone"/>
</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>